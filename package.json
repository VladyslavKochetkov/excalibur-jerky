{
  "name": "excalibury-jerky",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typegen": "sanity schema extract && sanity typegen generate",
    "dev": "npm run typegen && concurrently \"npm:dev:next\" \"npm:dev:stripe\" --names \"next,stripe\" --prefix-colors \"cyan,magenta\"",
    "dev:next": "next dev",
    "dev:stripe": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "build": "npm run typegen && next build",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write"
  },
  "dependencies": {
    "@portabletext/react": "^5.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@sanity/image-url": "^1.2.0",
    "@sanity/vision": "^4.12.0",
    "@stripe/stripe-js": "^5.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "next": "16.0.1",
    "next-sanity": "^11.6.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "^5.5.0",
    "sanity": "^4.12.0",
    "sonner": "^2.0.7",
    "stripe": "^17.6.0",
    "styled-components": "^6.1.19",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.1.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
