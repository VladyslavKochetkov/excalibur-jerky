# Square Configuration
# Get your credentials from https://developer.squareup.com/apps
# Use sandbox credentials for development
NEXT_PUBLIC_SQUARE_APPLICATION_ID=
NEXT_PUBLIC_SQUARE_LOCATION_ID=
SQUARE_ACCESS_TOKEN=

# Square Webhook Signature Key
# Get from Square Developer Dashboard > Webhooks
SQUARE_WEBHOOK_SIGNATURE_KEY=

# Square Webhook URL (for signature verification)
# Your production webhook URL
SQUARE_WEBHOOK_URL=

# Sanity Configuration
# Get your project ID and dataset from https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=
# API token with write permissions for webhook handlers
# Create at: https://sanity.io/manage/personal/tokens
SANITY_API_WRITE_TOKEN=

# Resend Configuration (for contact form emails)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_....

# Email address to send FROM (must be verified in Resend)
# For development, you can use: onboarding@resend.dev
# For production, use your verified domain email (e.g., noreply@yourdomain.com)
RESEND_FROM_EMAIL=onboarding@resend.dev

# Email address to receive contact form submissions and order notifications
# This is where contact form messages and order notifications will be sent
CONTACT_EMAIL=your-email@example.com